---
// Component Imports
import MainHead from "../components/MainHead.astro";
import ContactInfo from "../components/ContactInfo.astro";
import Footer from "../components/Footer.astro";
import FooterScript from "../components/FooterScripts.astro";
import Quotingbill from "./portfolio/quotingbill/quotingbill.astro";
import Godark from "./portfolio/godark/godark.astro";
import Flyairways from "./portfolio/flyairways/flyairways.astro";
import MchAnywhere from "./portfolio/mch/mch.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<script>
	import PhotoSwipeLightbox from 'photoswipe/lightbox';
	import 'photoswipe/style.css';
	  const lightbox = new PhotoSwipeLightbox({
	  gallery: '#breadboarding-gallery, #fatmarkers-gallery, #sectiondetails-gallery, #flyairways-gallery',
	  children: 'a',
	  pswpModule: () => import('photoswipe')
	});
	lightbox.init();
</script>
<html lang="en">
	<head>
		<MainHead
			title="Fede Bozo — Product Designer"
			description="Designer, storyteller, developer, musician."
		/>
	</head>
	
	<body
		class="selection:bg-fuchsia-300 selection:text-fuchsia-900 bg-oldpink text-selva"
	>
	<header class="m-8">
		<ContactInfo />
	</header>
		<div class="my-16 ml-4 md:my-24 lg:my-48">
			<h2 class="text-[8vw] leading-none uppercase font-display">
				I'm Fede, a Product Designer in Miami.
			</h2>
			<p class="mt-1 text-base">Design to empower people. Scroll down to check the work ↓</p>
		</div>
		<main class="main-thingi">
			<div class="grid">
				<Quotingbill />
				<MchAnywhere />
				<Flyairways />
				<Godark />
			</div>
		</main>
		<Footer />
		<!-- <FooterScript /> -->
	</body>
</html>
