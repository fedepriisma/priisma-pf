  <body class="antialiased bg-secondary-50">
    <header id="page-intro" class="bg-secondary-100 lg:bg-transparent lg:px-5">
      <head>
        <div class="flex justify-center mt-8 text-dark-coal">
          <svg role="img" class="h-auto fill-current w-fit max-h-7">
            <use xlink:href={svgSymbol + "#recraftr-logo"}></use>
